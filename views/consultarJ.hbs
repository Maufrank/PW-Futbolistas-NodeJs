    <input type="text" class="form-control" id="peso" placeholder="peso" name="peso">
  </div>
    <div class="mb-3 col-sm-1">
     <button type="submit" class="btn btn-primary">Buscar</button>
  </div>
</div>
</form>
      </div>
    </div>
  </div>
</div>



