            <div class="mb-3">
                <label for="titulos" class="form-label">Titulos</label>
                <input type="text" id="titulos" name="titulos" class="form-control" value="{{data.titulos}}">

            <div class="mb-3">
                <label for="liga" class="form-label">Liga</label>
                <input type="text" id="liga" name="liga" class="form-control" value="{{data.liga}}">
            </div>

            <label class="form-label">Division</label>
            <div class="form-check">
                <input type="radio" id="primera" name="division" class="form-check-input" value="primera" {{primera}}>
                <label class="form-check-label">Primera</label>
            </div>
            <div class="form-check">
                <input type="radio" id="segunda" name="division" class="form-check-input" value="segunda" {{segunda}}>
                <label class="form-check-label">Segunda</label>
            </div>
            <div class="mb-3">
                <label for="nacionalidad" class="form-label">Nacinalidad</label>
                <input type="string" id="nacionalidad" name="nacionalidad" class="form-control" value="{{data.nacionalidad}}">
            </div>

            <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
        </form>

