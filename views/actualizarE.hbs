            <input type="hidden" value="{{data._id}}" name="_id" id="_id">
            <div class="mb-3">
                <label for="nombreE" class="form-label">Nombre Equipo</label>
                <input type="text" id="nombreE" name="nombreE" class="form-control" value="{{data.nombreE}}">
            </div>
            <div class="mb-3">
                <label for="fechaE" class="form-label">Fecha de creacion</label>
