                <th>peso</th>
                <th>Genero</th>
                <th>Posicion</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
{{#each data}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{fecha}}</td>
                <td>{{dorsal}}</td>
                <td>{{peso}}</td>
                <td>{{genero}}</td>
