    <input type="number" class="form-control" id="dorsal" placeholder="dorsal" name="dorsal">
  </div>
    <div class="mb-3 col-sm-1">
     <button type="submit" class="btn btn-primary">Buscar</button>
  </div>
</div>
</form>
      </div>
    </div>
  </div>
    <div class="col-sm-3 mb-2 mb-sm-0">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Ordenas dorsal</h5>
        <form action="/filtroGenero" method="post">
<div class="row">
      <div class="mb-3 col-sm-5">
    <input type="hidden" class="form-control" id="genero" placeholder="genero" name="genero">
  </div>
    <div class="mb-3 col-sm-1">
     <button type="submit" class="btn btn-primary">Buscar</button>
  </div>
</div>
</form>
      </div>
    </div>
  </div>
      <div class="col-sm-3 mb-2 mb-sm-0">
